<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gyroscope"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context="com.example.projetmobileesir2.Defis.GyroscopeActivity">

    <View
        android:id="@+id/flashView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA00FF00"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/targetAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cible : 0°"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/currentAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ton angle : 0°"
        android:textSize="20sp"
        android:textColor="#333"
        android:layout_below="@id/targetAngle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temps : 20s"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_below="@id/currentAngle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"/>

    <!-- Cercle (boussole ou fond) -->
    <ImageView
        android:id="@+id/compassBackground"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:rotation="180"
        android:layout_centerInParent="true"
        android:src="@drawable/compass" />


    <!-- Creeper qui tourne -->
    <ImageView
        android:id="@+id/fleche"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:src="@drawable/fleche" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_below="@id/compassBackground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_below="@id/scoreText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>

</RelativeLayout>
